# Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# Application Configuration
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://nesbah_user:YOUR_SECURE_PASSWORD@postgres:5432/nesbah
POSTGRES_DB=nesbah
POSTGRES_USER=nesbah_user
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD

# Security Configuration
JWT_SECRET=YOUR_SUPER_SECURE_JWT_SECRET_AT_LEAST_64_CHARACTERS_LONG
MFA_SECRET=YOUR_SUPER_SECURE_MFA_SECRET_AT_LEAST_32_CHARACTERS_LONG

# Redis Configuration
REDIS_PASSWORD=YOUR_SECURE_REDIS_PASSWORD
REDIS_URL=redis://:YOUR_SECURE_REDIS_PASSWORD@redis:6379

# Email Configuration
NEXT_PUBLIC_EMAILJS_SERVICE_ID=service_mykz9r4
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=template_ed4f33c
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=1Ivllk-5mFxZxATpz
EMAILJS_PRIVATE_KEY=267xl81NNi-ekrb-BrYh7

# Monitoring Configuration
GRAFANA_PASSWORD=YOUR_SECURE_GRAFANA_PASSWORD
PROMETHEUS_RETENTION_TIME=200h

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/nesbah.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/nesbah.com.key

# Security Headers
CSP_NONCE=YOUR_CSP_NONCE
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ADMIN_RATE_LIMIT_MAX_REQUESTS=10
LOGIN_RATE_LIMIT_MAX_REQUESTS=5

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/nesbah.log

# Performance Configuration
NEXT_TELEMETRY_DISABLED=1
NEXT_OPTIMIZE_FONTS=true
NEXT_OPTIMIZE_IMAGES=true

# Background Jobs Configuration
BACKGROUND_JOBS_ENABLED=true
STATUS_TRANSITION_INTERVAL=60000
REVENUE_MONITOR_INTERVAL=300000
HEALTH_CHECK_INTERVAL=300000

# External Services
PAYMENT_GATEWAY_API_KEY=YOUR_PAYMENT_GATEWAY_API_KEY
PAYMENT_GATEWAY_SECRET=YOUR_PAYMENT_GATEWAY_SECRET
SMS_GATEWAY_API_KEY=YOUR_SMS_GATEWAY_API_KEY
SMS_GATEWAY_SECRET=YOUR_SMS_GATEWAY_SECRET

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=nesbah-backups
BACKUP_S3_ACCESS_KEY=YOUR_S3_ACCESS_KEY
BACKUP_S3_SECRET_KEY=YOUR_S3_SECRET_KEY

# Monitoring and Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR_SLACK_WEBHOOK
PAGERDUTY_ROUTING_KEY=YOUR_PAGERDUTY_ROUTING_KEY
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@nesbah.com
SMTP_PASSWORD=YOUR_SMTP_PASSWORD

# Feature Flags
FEATURE_MFA_ENABLED=true
FEATURE_RATE_LIMITING_ENABLED=true
FEATURE_MONITORING_ENABLED=true
FEATURE_BACKUP_ENABLED=true
FEATURE_SSL_ENFORCED=true

# Development/Testing (should be false in production)
DEBUG=false
ENABLE_DEBUG_ROUTES=false
ENABLE_TEST_ENDPOINTS=false
